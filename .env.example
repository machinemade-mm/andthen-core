# And Then? Core - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Database (SQLite)
# Path to your local SQLite database file
# Default: sqlite:andthen.db (creates andthen.db in project root)
DATABASE_URL=sqlite:andthen.db

# JWT Authentication
# SECURITY WARNING: Generate a strong random secret for production!
# Example: openssl rand -base64 32
# NEVER use this default value in production!
JWT_SECRET=andthen-core-default-secret-change-in-production

# Server Port (optional)
# Default: 3000
PORT=3000
